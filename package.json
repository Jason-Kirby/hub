{
  "author": "Jason Kirby",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jason-Kirby/hub/issues"
  },
  "name": "hub",
  "version": "0.1.0",
  "private": true,
  "description": "home website",
  "main": "index.js",
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "watch:sass": "node-sass src/sass/main.scss src/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass src/sass/main.scss src/css/style.comp.css",
    "concat:css": "concat -o src/css/style.concat.css src/css/icon-font.css src/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" src/css/style.concat.css -o src/css/style.prefix.css",
    "compress:css": "node-sass src/css/style.prefix.css src/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jason-Kirby/hub.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "concat": "^1.0.3",
    "devserver": "^0.2.5",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "parallel": "^1.2.0",
    "postcss-cli": "^7.1.0",
    "sass-loader": "^8.0.2"
  }
}
